#include <stdio.h>
int num; 
main()
{
	printf("ingrese un numero entero:");
	scanf("%d", &num); 
	printf("la conjetura de collatz de %d es: \n",num); 

     while(num!=1)
     {
     	printf("%d",num); 
     	if(num %2==0)
     	{
     		num=num/2; 
		 }else
		 {
		 	num=num*3+1; 
		 	
		 }
	 }
	printf("1");
	 
}
